<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkLightBlue"
    tools:context=".ManageStoreActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarItem5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/tvBusinessName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            tools:text="My business" />

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_above="@id/bottom_navigation"
        android:layout_below="@id/ivLogoBusiness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




    <ImageView
        android:id="@+id/ivLogoBusiness"
        android:layout_marginLeft="10dp"
        android:layout_width="97dp"
        android:layout_height="53dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbarItem5"
        tools:srcCompat="@tools:sample/avatars" />

</RelativeLayout>