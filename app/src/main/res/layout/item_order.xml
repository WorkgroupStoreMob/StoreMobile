<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Name" />

    <TextView
        android:id="@+id/tv_date_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="date" />

    <TextView
    android:id="@+id/tv_email_order"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
    android:layout_below="@id/tv_name_order"
    android:fontFamily="casual"
    android:textSize="18sp"
    android:textStyle="bold"
    tools:text="email" />

    <TextView
        android:id="@+id/tv_phone_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
       android:layout_toEndOf="@id/tv_email_order"
        android:layout_below="@id/tv_name_order"
        android:fontFamily="casual"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="phone" />

    <LinearLayout
        android:layout_below="@id/tv_phone_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Items" />

        <TextView
            android:id="@+id/tv_qty_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Qty" />

        <TextView
            android:id="@+id/tv_pr_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="price" />


        <TextView
            android:id="@+id/tv_status_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="status" />
    </LinearLayout>
</RelativeLayout>