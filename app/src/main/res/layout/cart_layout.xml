<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/imageButtonCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            app:layout_editor_absoluteX="7dp"
            app:layout_editor_absoluteY="16dp"
            app:srcCompat="@drawable/cart"/>

        <TextView
            android:id="@+id/tv_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageButtonCart"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/rounded_txtview"
            android:gravity="center"
            android:text="@string/tvCounter"
            android:textColor="#FCFCFC"
            android:textSize="12sp" />
</RelativeLayout>